{
  "name": "uasabi_static_site",
  "version": "1.0.0",
  "description": "A static site for Uasabi Ltd",
  "main": "index.js",
  "scripts": {
    "start": "node dist/index.js",
    "build": "npm run clean && npm run copy && npm run initiate-html && npm run uglify",
    "copy": "cp -r src/* dist",
    "clean": "rm -rf dist && mkdir dist",
    "initiate-html": "npm run inline:css && npm run minify:html",
    "inline:css": "critical src/index.html --base src/ --inline --folder dist > dist/index.html",
    "minify:html": "html-minifier --minify-css --collapse-whitespace -o dist/index.html dist/index.critical.html",
    "uglify": "uglifyjs src/js/*.js -o dist/js/script.min.js",
    "startandsync": "node src/index.js & browser-sync start --proxy 'localhost:5000' --files 'src'",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "E Keane",
  "license": "MIT",
  "dependencies": {
    "critical": "^0.8.4",
    "express": "^4.15.2",
    "html-minifier": "^3.4.4",
    "uglify-js": "^2.8.22"
  }
}
